<%= form_for @actor,  url: actors_path, method: :post do |f|%>
  <div>
    <%=f.label :nombre%>
    <%=f.text_field :name%>
  </div>
  <div>
    <%=f.label :biografia%>
    <%=f.text_area :bio%>
  </div>
  <div>
    <%=f.label :fecha_nacimiento%>
    <%=f.text_field :birth_date%>
  </div>
  <div>
    <%=f.label :lugar_nacimiento%>
    <%=f.text_field :birth_place%>
  </div>
  <div>
    <%=f.label :imagen%>
    <%=f.text_field :image_url%>
  </div>
  <div>
    <%=f.label :esta_vivo%>
    <%=f.check_box :alive%>
  </div>
  <div>
    <%=f.label :lugar_muerte%>
    <%=f.text_field :death_place%>
  </div>
  <div>
    <%=f.label :fecha_muerte%>
    <%=f.text_field :death_date%>
  </div>
  <div>
    <%=f.submit%>
  </div>
<% end %>
